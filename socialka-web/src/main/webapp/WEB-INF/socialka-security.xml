<beans:beans xmlns="http://www.springframework.org/schema/security" 
xmlns:beans="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
http://www.springframework.org/schema/security 
http://www.springframework.org/schema/security/spring-security.xsd">

	<http auto-config="true" use-expressions="true">
	    
		<intercept-url pattern="/admin**" access="hasRole('ROLE_ADMIN')" />
		<intercept-url pattern="/my_page**" access="hasRole('ROLE_USER')" />
		<intercept-url pattern="/my_friends**" access="hasRole('ROLE_USER')" />
		<intercept-url pattern="/friend/**" access="hasRole('ROLE_USER')" />
		<intercept-url pattern="/groups/**" access="hasRole('ROLE_USER')" />
		
		<access-denied-handler error-page="/403.do" />

		<form-login 
		    login-page="/login.html" 
		    default-target-url="/my_page.html"
			authentication-failure-url="/login.html?error" 
			username-parameter="email"
			password-parameter="password" />
		<logout logout-success-url="/login.html" />

		<csrf />
	</http>
	  
	<authentication-manager >
		<authentication-provider user-service-ref="signInServiceImpl" >
			<password-encoder hash="bcrypt"/>
		</authentication-provider>
	</authentication-manager>

	<beans:bean id="encoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />

	<beans:bean id="authProvider"
		class="org.springframework.security.authentication.dao.DaoAuthenticationProvider">
		<beans:property name="userDetailsService" ref="signInServiceImpl" />
		<beans:property name="passwordEncoder" ref="encoder"/>
	</beans:bean>
	
</beans:beans>